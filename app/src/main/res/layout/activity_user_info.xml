<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:background="@color/background"
        tools:context=".UserInfo">


        <TextView
            android:id="@+id/gender_txt"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:gravity="center"
            android:text="Gender?"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.004" />

        <TextView
            android:id="@+id/height_txt"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:gravity="center"
            android:text="Height?"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.194" />

        <EditText
            android:id="@+id/feet"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonstyle2"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/c_weight_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.199"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/height_txt" />

        <TextView
            android:id="@+id/feet_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="feet"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/feet"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.289" />

        <com.google.android.material.slider.Slider
            android:id="@+id/current_weight_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="50.0"
            android:valueTo="500.0"
            app:layout_constraintBottom_toTopOf="@+id/g_weight_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/c_weight_txt"
            app:layout_constraintVertical_bias="0.512"
            app:thumbColor="@color/white"
            app:trackColor="@color/white" />

        <com.google.android.material.slider.Slider
            android:id="@+id/goal_weight_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="50.0"
            android:valueTo="500.0"
            app:layout_constraintBottom_toTopOf="@+id/activity_level_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/g_weight_txt"
            app:thumbColor="@color/white"
            app:trackColor="@color/white" />

        <EditText
            android:id="@+id/inches"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonstyle2"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/c_weight_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.706"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/height_txt" />

        <TextView
            android:id="@+id/inches_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="inches"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/inches"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.285" />

        <TextView
            android:id="@+id/c_weight_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Current Weight?"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/height_txt"
            app:layout_constraintVertical_bias="0.147" />

        <TextView
            android:id="@+id/g_weight_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Goal Weight?"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.502" />

        <TextView
            android:id="@+id/activity_level_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Activity Level?"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.653" />

        <Spinner
            android:id="@+id/act_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonstyle2"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_level_txt"
            app:layout_constraintVertical_bias="0.151" />

        <Button
            android:id="@+id/finish_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:background="@drawable/buttonstyle1"
            android:text="FINISH"
            android:textColor="@android:color/white"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/act_level"
            app:layout_constraintVertical_bias="1.0" />

        <Spinner
            android:id="@+id/gender_spin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonstyle2"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/height_txt"
            app:layout_constraintTop_toBottomOf="@+id/gender_txt"
            app:layout_constraintVertical_bias="0.4"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/age_ask"
            android:layout_width="94dp"
            android:layout_height="36dp"
            android:layout_marginStart="92dp"
            android:gravity="center"
            android:text="Age:"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/finish_user"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/act_level"
            app:layout_constraintVertical_bias="0.477" />

        <EditText
            android:id="@+id/age_input"
            android:layout_width="97dp"
            android:layout_height="36dp"
            android:background="@drawable/buttonstyle2"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/finish_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/age_ask"
            app:layout_constraintTop_toBottomOf="@+id/act_level"
            app:layout_constraintVertical_bias="0.476" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>